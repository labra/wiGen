	rdfs:comment "Enforces a constraint that at least one of several provided shapes must be valid for the focus resource." ;
	sh:argument [
		sh:predicate sh:shapes ;
		sh:class rdf:List ;
		rdfs:label "shapes" ;
		rdfs:comment "A list of shapes that will be validated." ; 
	] ;
